{% extends 'base.html.twig' %}

{% block title %}DifforVert > {{ app.user.username}}{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="container" style="margin-top: 2%;">
        <div class="container">
            <div class="row" style="text-align: center;">
                <img src="{{ asset('img/difforvert.png') }}">
            </div>
            <div class="row">
                <div class="input-field col s12" style="text-align: center;">
                    <h4>{{ app.user.firstname }}  {{ app.user.lastname }}</h4>
                </div>
            </div>
            <div class="row"></div>
            <div class="row">
                <div class="input-field col s6" style="text-align: center;">
                    <a href="{{ path('dashboard') }}" class="waves-effect waves-light btn" style="background-color: #6C8E15;">Retourner sur la page d'accueil</a>
                </div>
                <div class="input-field col s6" style="text-align: center;">
                    <a href="{{ path('app_logout') }}" class="waves-effect waves-light btn" style="background-color: #6C8E15;">Se Deconnecter : {{ app.user.username }}</a>
                </div>
            </div>
        </div>
    </div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
</form>
{% endblock %}
